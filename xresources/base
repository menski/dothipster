! disable scrollbar
URxvt*scrollBar: false

! set font
URxvt*font: xft:Fantasque Sans Mono:pixelsize=14

! do not change color to highlight something
URxvt.intensityStyles: false

! slightly fade out if not in focus
URxvt*fading: 10

! increase history
URxvt*saveLines:              10000

! disable iso14755
URxvt*iso14755: false
URxvt*iso14755_52: false


! extensions
URxvt*perl-ext:
URxvt*perl-ext-common: default,url-select,font-size
URxvt*url-select.launcher: chromium
URxvt*matcher.button: 1
URxvt*url-select.underline: true
URxvt*keysym.C-i: perl:url-select:select_next
URxvt*keysym.C-S-Up: perl:font-size:increase
URxvt*keysym.C-S-Down: perl:font-size:decrease
URxvt*keysym.C-S-Left: perl:font-size:reset
